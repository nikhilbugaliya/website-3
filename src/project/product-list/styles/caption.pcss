@import "base/vars/vars.pcss";

.caption {
  margin: 50px 40px 50px;

  text-align: center;

  color: #595959;

  font-size: $font__slogan;

  &__big {
    display: inline;

    font-size: 120%;
    line-height: 1;
  }
  &__icon {
    display: inline-block;

    width: 50px;
    height: 60px;

    vertical-align: middle;

    background-image: url('/static/img/1f447.png');
    background-repeat: no-repeat;
    background-position: center;
    background-size: contain;
  }
}
