}
.hero__content__2{
  display: none;
  @media(--mobile) {
    display: inline-block !important;
    height: 60%;
    width: 100%;
    text-align: center;
    background-image: url(../img/Bgr_clg02-blue.jpg);
    background-repeat: no-repeat;
    background-size: cover;
  }
  @media(--tabletandless){
    display: inline-block !important;
    height: 60%;
    width: 100%;
    text-align: center;
    background-image: url(../img/Bgr_clg02-blue.jpg);
    background-repeat: no-repeat;
    background-size: cover;
  } 
  a{
    font-size: 36px;
    color: #fff;
    margin-top: 20px;
