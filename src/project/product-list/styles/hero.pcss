.enter__btn{
  display: none !important;
  @media(--mobile) {
    display: inline-block !important;
    position: absolute;
    bottom: 0;
    left: 0;
  }
  @media(--tabletandless) {
    display: inline-block !important;
    position: absolute;
    bottom: 0;
    left: 0;
  }
}
.caption__play__mobile{
  width: 160px;
  height: 160px;
  font-size: 160px;
  margin: 162px auto 26px auto;
  color: #fff;
}
.caption__play__mobile i:hover{
  color: #d9d9d9;
}
.caption__description__mobile{
  font-size: 32px;
  color: #fff;
}
.sellers_auth_btn{
  display: none;
  @media(--mobile) {
    display: block;
    font-size: 36px;
    color: #fff;
    border: 1px solid #fff;
