@import "base/vars/vars.pcss";
.chat-cnt {}

.chat {}

.chat_messages {
  padding-top: 20px;

  .bubble {
    position: relative;

    @media(--mobile) {
      max-width: 600px;
    }

    max-width: 640px;
    margin-bottom: 10px;

    border-radius: 12px;

    &:before {
      position: absolute;
      z-index: -1;
      top: 0px;

      height: 20px;

      content: "";
    }
    &:after {
      position: absolute;
      z-index: -1;
      top: -12px;

      height: 20px;

      content: "";
    }
    &_info {
      position: absolute * * 10px -40px;

      display: flex;

      &_time {
        display: inline-block;
        margin: auto 40px 20px;
        color: #91A6A2;
        @media(--mobile) {
          font-size: 24px;
          margin: auto 47.63px 24.13px;
        }
        font-size: 16px;
        flex-shrink: 0;
      }
      &_status {
        margin-left: 10px;

        color: #91A6A2;
      }
    }
  }
}

.chat-row {
  display: flex;

  &.__center {
    justify-content: center;
  }
  &.__right {
    justify-content: flex-end;
    color: #333;

    .chat-msg-photo-txt_txt {
      height: calc(10em);
      -webkit-line-clamp: 7;
    }

    .bubble {
      margin-right: 21.75px;

      background: #CAE6E1;

      &:before {
        right: -11px;

        border-right: 12px solid #CAE6E1;
        border-bottom-right-radius: 20px 30px;
        background: #CAE6E1;
      }
      &:after {
        right: -13px;

        width: 14px;
        height: 20px;

        border-bottom-right-radius: 20px 15px;
        background: white;
      }
    }
  }
  &.__left {

    flex-direction: row-reverse;
    justify-content: flex-end;
    color: $color__gray-dark;

    .chat-msg-photo-txt_txt {
      height: calc(6.5em);
      -webkit-line-clamp: 5;
      padding: 0 20px 0;
    }
    .chat-msg-product-wrap {
      flex-direction: row-reverse;
    }
    .chat-msg-photo-txt_photo{
      border-radius: 0 12px 12px 0;
    }
    .bubble_info_time{
      margin: auto 15px 20px;
    }
    .bubble {
      margin-left: 21.75px;

      background: #f0f0f0;

      &:before {
        left: -11px;

        border-left: 12px solid #f0f0f0;
        border-bottom-left-radius: 20px 30px;
        background: #f0f0f0;
      }
      &:after {
        left: -13px;

        width: 14px;
        height: 20px;

        border-bottom-left-radius: 20px 15px;
        background: white;
      }
    }
  }
}
