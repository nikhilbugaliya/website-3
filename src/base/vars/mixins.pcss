@define-mixin buttonSample $bottom: 100px, $background: lightgrey {

  @media (--mobile) {
    font-family: $font__family__light;
    font-size: 42px;
    text-align: center;
    line-height: 120px;
    position:fixed;
    left: 0;
    right: 0;
    bottom: $bottom;
    background: $background;
    height: 120px;
  }
}

